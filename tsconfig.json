{
	"compilerOptions": {
		"skipLibCheck": true,
		"moduleResolution": "node",
		"module": "es2015",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es2015",
			"dom"
		],
		"outDir": "build"
	},
	"include": [
		"src/**/*"
	],
	"angularCompilerOptions": {
		"genDir": "./src/aot",
		"entryModule": "./src/browser/app#AppModule"
	}
}
